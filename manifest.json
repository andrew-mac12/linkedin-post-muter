{
  "manifest_version": 3,
  "name": "LinkedIn Post Muter",
  "version": "0.1.4",
  "description": "Hides LinkedIn posts that match selected keywords",
  "permissions": ["storage"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["keywords.json"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

